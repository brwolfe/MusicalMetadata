<!-- we need to update this with properties / values for the tags. should probably use whatever is used here (Albums?g=Disco.html), but that file isn't working on github... -->
<!DOCTYPE html>
<html>
  <head>
    <title>BrandCramp: Albums</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <a href="/"><h1>Albums</h1></a>
    <% if (items.length > 0) { %>
    <ul>
      <% items.forEach(function(item) { %>
      <li><a href="/albums/<%=item._id%>"><%=item.name%></a></li>
      <% }); %>
    </ul>
    <% } else { %>
    <div>No albums have been added.</div>
    <% } %>

      <h2>Search for albums by name</h2>
      <form method="get" action="/albums/">
        <label>Album name: <input name="name"></label>
        <button>Search</button>
      </form>

    <div class="control">
      <h2>Add or update an album</h2>
      <script>
      function onFormSubmit(form) {
        form.action = form.action + form.elements['item[id]'].value;
        console.log(form.action);
        return true;
      } 
      </script>
      <form method="post" action="/albums/"
            onsubmit="return onFormSubmit(this);">
        <!-- The line above dynamically sets the PUT destination when the -->
        <!-- form is submitted. -------------------------------------------->
        <input type="hidden" name="_method" value="put">
        <!-- The line above tells the server to treat this as a PUT request. -->
<!-- let's make this 'name' and let the database assign an id? -->
        <label>Album ID<br>
          (lowercase letters only, no spaces):
          <input name="item[id]" type="text" pattern="[a-z]+" required
                 placeholder="thebeatlesthewhitealbum">
        </label>
        <label>Artist name: 
          <input name="item[name]" type="text" required
                 placeholder="">
        </label>
       
        <button>Add or update</button>
      </form>
    </div>
  </body>
</html>
